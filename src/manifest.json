{
  "manifest_version": 3,
  "name": "ИИ-Автокликер",
  "version": "2.0.0",
  "description": "Автоматизация действий на веб-страницах с поддержкой Google Gemini ИИ",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ИИ-Автокликер",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "common/logger.js",
        "common/validator.js",
        "common/storage.js",
        "common/helpers.js",
        "common/events.js",
        "content/core/ElementFinder.js",
        "content/core/ActionRecorder.js",
        "content/core/ActionExecutor.js",
        "content/core/index.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_start"
    }
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "options_page": "settings/settings.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
