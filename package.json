{
  "name": "ai-autoclicker",
  "version": "3.0.0",
  "description": "AI-powered browser extension for web automation using Google Gemini.",
  "main": "build.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:dev": "NODE_ENV=development rollup -c src/rollup.config.js",
    "build:prod": "NODE_ENV=production rollup -c src/rollup.config.js",
    "build:watch": "NODE_ENV=development rollup -c src/rollup.config.js --watch",
    "clean": "rm -rf deploy *.zip",
    "lint": "eslint src/ --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "CI=true NODE_OPTIONS='--experimental-vm-modules' jest --coverage --watchAll=false",
    "test:verbose": "NODE_OPTIONS='--experimental-vm-modules' jest --verbose",
    "format": "prettier --write 'src/**/*.js'"
  },
  "keywords": [
    "chrome",
    "extension",
    "automation",
    "AI",
    "gemini"
  ],
  "author": "crosspostly",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.4.1",
    "babel-jest": "^30.2.0",
    "eslint": "^8.54.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.1.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "rollup": "^4.53.1"
  }
}
