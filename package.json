{
  "name": "ai-autoclicker",
  "version": "2.0.0",
  "description": "AI-powered browser extension for web automation using Google Gemini.",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "build:prod": "NODE_ENV=production node build.js",
    "build:watch": "nodemon --watch src build.js",
    "clean": "rm -rf deploy *.zip",
    "lint": "eslint src/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "format": "prettier --write 'src/**/*.js'"
  },
  "keywords": [
    "chrome",
    "extension",
    "automation",
    "AI",
    "gemini"
  ],
  "author": "crosspostly",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@testing-library/dom": "^10.4.1",
    "babel-jest": "^30.2.0",
    "eslint": "^8.54.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.1.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0"
  }
}
